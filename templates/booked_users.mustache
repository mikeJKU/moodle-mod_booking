{{!
    @template mod_booking/booked_users

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "bookedusers" : "<div></div>",
        "waitinglist" : "<div></div>",
        "reservedusers" : "<div></div>",
        "userstonotify" : "<div></div>",
        "deletedusers" : "<div></div>"
    }
}}
<div class="accordion mt-3 mb-3" id="accordion-usertables">
    {{#bookedusers}}
        <div class="card">
            <div class="card-header bg-transparent" id="accordion-heading-bookedusers">
                <div class="bookingstracker-header" role="button" data-toggle="collapse" data-bs-toggle="collapse" data-target="#accordion-item-bookedusers" data-bs-target="#accordion-item-bookedusers" aria-expanded="true" aria-controls="accordion-item-bookedusers">
                    <i class="fa fa-fw fa-ticket" aria-hidden="true"></i>&nbsp;{{#str}} bookings, mod_booking {{/str}}
                </div>
            </div>
            <div id="accordion-item-bookedusers" class="collapse show" aria-labelledby="accordion-heading-bookedusers" data-parent="#accordion-usertables">
            <div class="card-body p-0">
                {{{bookedusers}}}
            </div>
            </div>
        </div>
    {{/bookedusers}}
    {{#waitinglist}}
        <div class="card">
            <div class="card-header bg-transparent" id="accordion-heading-waitinglist">
                <div class="bookingstracker-header" role="button" data-toggle="collapse" data-bs-toggle="collapse" data-target="#accordion-item-waitinglist" data-bs-target="#accordion-item-waitinglist" aria-expanded="false" aria-controls="accordion-item-waitinglist">
                    <i class="fa fa-fw fa-hourglass" aria-hidden="true"></i>&nbsp;{{#str}} waitinglist, mod_booking {{/str}}
                </div>
            </div>
            <div id="accordion-item-waitinglist" class="collapse" aria-labelledby="accordion-heading-waitinglist" data-parent="#accordion-usertables">
            <div class="card-body p-0">
                {{{waitinglist}}}
            </div>
            </div>
        </div>
    {{/waitinglist}}
    {{#reservedusers}}
        <div class="card">
            <div class="card-header bg-transparent" id="accordion-heading-reservedusers">
                <div class="bookingstracker-header" role="button" data-toggle="collapse" data-bs-toggle="collapse" data-target="#accordion-item-reservedusers" data-bs-target="#accordion-item-reservedusers" aria-expanded="false" aria-controls="accordion-item-reservedusers">
                    <i class="fa fa-fw fa-shopping-cart" aria-hidden="true"></i>&nbsp;{{#str}} reservedusers, mod_booking {{/str}}
                </div>
            </div>
            <div id="accordion-item-reservedusers" class="collapse" aria-labelledby="accordion-heading-reservedusers" data-parent="#accordion-usertables">
            <div class="card-body p-0">
                {{{reservedusers}}}
            </div>
            </div>
        </div>
    {{/reservedusers}}
    {{#userstonotify}}
        <div class="card">
            <div class="card-header bg-transparent" id="accordion-heading-userstonotify">
                <div class="bookingstracker-header" role="button" data-toggle="collapse" data-bs-toggle="collapse" data-target="#accordion-item-userstonotify" data-bs-target="#accordion-item-userstonotify" aria-expanded="false" aria-controls="accordion-item-userstonotify">
                    <i class="fa fa-fw fa-bell-o" aria-hidden="true"></i>&nbsp;{{#str}} userstonotify, mod_booking {{/str}}
                </div>
            </div>
            <div id="accordion-item-userstonotify" class="collapse" aria-labelledby="accordion-heading-userstonotify" data-parent="#accordion-usertables">
            <div class="card-body p-0">
                {{{userstonotify}}}
            </div>
            </div>
        </div>
    {{/userstonotify}}
    {{#deletedusers}}
        <div class="card">
            <div class="card-header bg-transparent" id="accordion-heading-deletedusers">
                <div class="bookingstracker-header" role="button" data-toggle="collapse" data-bs-toggle="collapse" data-target="#accordion-item-deletedusers" data-bs-target="#accordion-item-deletedusers" aria-expanded="false" aria-controls="accordion-item-deletedusers">
                    <i class="fa fa-fw fa-ban" aria-hidden="true"></i>&nbsp;{{#str}} deletedbookings, mod_booking {{/str}}
                </div>
            </div>
            <div id="accordion-item-deletedusers" class="collapse" aria-labelledby="accordion-heading-deletedusers" data-parent="#accordion-usertables">
            <div class="card-body p-0">
                {{{deletedusers}}}
            </div>
            </div>
        </div>
    {{/deletedusers}}
    {{#bookinghistory}}
        <div class="card">
            <div class="card-header bg-transparent" id="accordion-heading-bookinghistory">
                <div class="bookingstracker-header" role="button" data-toggle="collapse" data-bs-toggle="collapse" data-target="#accordion-item-bookinghistory" data-bs-target="#accordion-item-bookinghistory" aria-expanded="false" aria-controls="accordion-item-bookinghistory">
                    <i class="fa fa-history" aria-hidden="true"></i>&nbsp;{{#str}} bookinghistory, mod_booking {{/str}}
                </div>
            </div>
            <div id="accordion-item-bookinghistory" class="collapse" aria-labelledby="accordion-heading-bookinghistory" data-parent="#accordion-usertables">
                <div class="card-body p-0">
                    {{{bookinghistory}}}
                </div>
            </div>
        </div>
    {{/bookinghistory}}
    {{#optionstoconfirm}}
        <div class="card">
            <div class="card-header bg-transparent" id="accordion-heading-optionstoconfirm">
                <div class="bookingstracker-header" role="button" data-toggle="collapse" data-target="#accordion-item-optionstoconfirm" aria-expanded="false" aria-controls="accordion-item-optionstoconfirm">
                    <i class="fa fa-fw fa-hourglass" aria-hidden="true"></i>&nbsp;{{#str}} optionstoconfirm, mod_booking {{/str}}
                </div>
            </div>
            <div id="accordion-item-optionstoconfirm" class="collapse" aria-labelledby="accordion-heading-optionstoconfirm" data-parent="#accordion-usertables">
            <div class="card-body p-0">
                <div>{{{optionstoconfirmadditionaltexts}}}</div>
                {{{optionstoconfirm}}}
            </div>
            </div>
        </div>
    {{/optionstoconfirm}}
</div>
