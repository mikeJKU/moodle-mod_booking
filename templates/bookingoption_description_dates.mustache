{{!
    @template mod_booking/bookingoption_description_dates

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "datesexist": true,
        "dates": [
            {
                "datestring": "3 March 2023, 10:30 AM - 11:45 AM",
                "customfields": []
            },
            {
                "datestring": "10 March 2023, 10:30 AM - 11:45 AM",
                "customfields": []
            }
        ]
    }
}}
{{#datesexist}}
    <a class="collapseoptiondatesbutton" data-toggle="collapse" data-bs-toggle="collapse" href="#collapseoptiondates" role="button" aria-expanded="false" aria-controls="collapseoptiondates">
        <i class="fa fa-calendar" aria-hidden="true"></i>&nbsp;{{#str}} dates, mod_booking {{/str}}...
    </a>
    <div id="collapseoptiondates" class="show list-group-item border-0 pl-0 pr-0">
        <div class="list-group">
            {{#dates}}
                <div class="list-group-item">
                    <div>
                        <b>{{{datestring}}}</b>
                        {{#entitylink}}
                            <div class="entity-for-optiondate-area">
                                <i class="fa fa-fw fa-map-marker" aria-hidden="true"></i>&nbsp;{{{.}}}
                            </div>
                        {{/entitylink}}
                    </div>
                    <div {{^customfields}}style="display:none"{{/customfields}}>
                        {{#customfields}}
                            <div>
                                {{name}}{{{value}}}
                            </div>
                        {{/customfields}}
                    </div>
                </div>
            {{/dates}}
        </div>
    </div>
{{/datesexist}}
